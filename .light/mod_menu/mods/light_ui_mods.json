{
    "namespace": "light_mods_panel",
    "inventory_hud_panel@pl.pnl": {
        "anchor_from": "bottom_right",
        "anchor_to": "bottom_right",
        "size": [
            "100%",
            "100%c"
        ],
        "controls": [
            {
                "image@pl.img": {
                    "clips_children": true,
                    "texture": ".light/textures/clear",
                    "size": [
                        162,
                        52
                    ],
                    "anchor_from": "bottom_right",
                    "anchor_to": "bottom_right",
                    "controls": [
                        {
                            "inventory_grid@pl.grd": {
                                "collection_name": "hotbar_items",
                                "grid_item_template": "light_mods_panel.inventory_hud",
                                "grid_dimensions": [
                                    9,
                                    4
                                ],
                                "offset": [
                                    0,
                                    -10
                                ],
                                "size": [
                                    "162px",
                                    "54px + 16px"
                                ]
                            }
                        }
                    ]
                }
            }
        ]
    },
    "inventory_hud@pl.pnl": {
        "$durability_bar_required": true,
        "$item_collection_name": "hotbar_items",
        "$stack_count_required": true,
        "controls": [
            {
                "stack_count@common.stack_count_label": {
                    "layer": 3
                }
            },
            {
                "item_renderer@common.item_renderer": {
                    "layer": 2,
                    "size": [
                        12,
                        12
                    ]
                }
            },
            {
                "durability@common.durability_bar": {
                    "layer": 1
                }
            },
            {
                "slot": {
                    "type": "image",
                    "texture": ".light/textures/mods/slot",
                    "size": [
                        "100% -1px",
                        "100% -1px"
                    ]
                }
            }
        ],
        "size": [
            18,
            18
        ]
    },
    "low_durability_ping@pl.pnl": {
        "layer": 1,
        "controls": [
            {
                "durability_ping_grid@light_mods_panel.durability_ping_grid": {}
            }
        ]
    },
    "durability_ping_grid@pl.grd": {
        "grid_item_template": "light_mods_panel.durability_ping_panel",
        "grid_dimension_binding": "#hotbar_grid_dimensions",
        "collection_name": "hotbar_items",
        "size": [
            "100%cm",
            "100%cm"
        ],
        "bindings": [
            {
                "binding_name": "#hotbar_grid_dimensions",
                "binding_type": "global"
            }
        ]
    },
    "durability_ping_panel@pl.pnl": {
        "controls": [
            {
                "durability_ping@light_mods_panel.durability_ping": {}
            }
        ],
        "bindings": [
            {
                "binding_name": "#slot_selected",
                "binding_name_override": "visible",
                "binding_type": "collection",
                "binding_collection_name": "hotbar_items"
            }
        ]
    },
    "durability_ping@pl.pnl": {
        "controls": [
            {
                "durability_ping_bg@light_mods_panel.durability_ping_bg": {}
            }
        ],
        "bindings": [
            {
                "binding_name": "(not (#item_durability_total_amount = 0))",
                "binding_name_override": "visible",
                "binding_type": "collection",
                "binding_collection_name": "hotbar_items"
            }
        ]
    },
    "durability_ping_bg@pl.img": {
        "texture": ".light/textures/bg/base_bg",
        "anchor_from": "top_left",
        "anchor_to": "top_left",
        "size": [
            "100%c - 13px",
            "100%c - 6px"
        ],
        "alpha": 0.65,
        "offset": [
            -50,
             5
        ],
        "anims": [
            "light_hud_animations.light_durability_start"
        ],
        "controls": [
            {
                "durability_ping_content@pl.hsp":{
                    "anchor_from": "left_middle",
                    "anchor_to": "left_middle",
                    "offset": [
                        0,
                        "8%"
                    ],
                    "controls": [
                        {
                            "padding_0@pl.pnl": {
                                "size": [
                                    5,
                                    0
                                ]
                            }
                        },
                        {
                            "durability_ping_item_renderer@light_mods_panel.durability_ping_item_renderer": {}
                        },
                        {
                            "padding_1@pl.pnl": {
                                "size": [
                                    5,
                                    0
                                ]
                            }
                        },
                        {
                            "durability_ping_text@light_mds_panel.durability_ping_text": {}
                        }
                    ]
                }
            }
        ],
        "$total_amount": "#item_durability_total_amount",
        "$current_amount": "#item_durability_current_amount",
        "$min_durability": 0,
        "$max_durability": 0.26,
        "bindings": [
            {
                "binding_name": "$total_amount",
                "binding_type": "collection",
                "binding_collection_name": "hotbar_items"
            },
            {
                "binding_name": "$current_amount",
                "binding_type": "collection",
                "binding_collection_name": "hotbar_items"
            },
            {
                "binding_type": "view",
                "source_property_name": "((($current_amount / $total_amount) > $min_durability) and (($current_amount / $total_amount) < $max_durability)) or (($current_amount / $total_amount) = $min_durability)",
                "target_property_name": "#visible"
            }
        ]
    },
    "durability_ping_text": {
        "type": "stack_panel",
        "size": [
            "100%",
            "100%c"
        ],
        "controls": [
            {
                "durability_ping_alert@light_mods_panel.durability_ping_alert": {}
            },
            {
                "durability_id_aux@light_mods_panel.durability_id_aux": {}
            }
        ]
    },
    "durability_id_aux": {
        "type": "label",
        "text": "#text",
        "layer": 5,
        "font_type": "Inter-Medium",
        "bindings": [
            {
                "binding_name": "#item_id_aux",
                "binding_type": "collection",
                "binding_collection_name": "hotbar_items"
            },
            {
                "binding_type": "view",
                "source_property_name": "('ID Aux: Â§z' + #item_id_aux)",
                "target_property_name": "#text"
            }
        ]
    },
    "durability_ping_alert": {
        "type": "label",
        "text": "Â§eTool Durability Low!",
        "layer": 5,
        "font_type": "Inter-Medium"
    },
    "durability_ping_item_renderer": {
        "type": "stack_panel",
        "offset": [
            0,
            "50%"
        ],
        "size": [
            22,
            "100%c"
        ],
        "controls": [
            {
                "padding_0": {
                    "type": "panel",
                    "size": [
                        0,
                        5
                    ]
                }
            },
            {
                "item_renderer@common.item_renderer": {
                    "size": [
                        22,
                        22
                    ],
                    "$item_collection_name": "hotbar_items",
                    "item_renderer_binding_condition": "always_when_visible"
                }
            }
        ]
    }
}